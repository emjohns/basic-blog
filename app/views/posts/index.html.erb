<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <div class="container  col-md-offset-1 col-lg-offset-1">
  <h1>Learning to Code</h1>
  <p>It's a process. Tell me about it.</p>
  <%= link_to 'New Post', new_post_path, {class: "btn btn-primary"} %>
</div>
</div>

<div class="container col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
  <p id="posts">
    <% @posts.each do |post| %>

    <div class="page-header">
      <div>
        <h2 style="color: #212121" id="post_title"><%= link_to "#{post.title}", post %></h2>
      </div>

      <h5>
        <div class="col-xs-4">
          <% if post.user.avatar.url %>
          <%= image_tag post.user.avatar.url, class:"img-rounded", width:"20px" %>
          <% else %>
            <%= gravatar_tag post.user.email, class:"img-rounded", size: 20 %>
          <% end %>
          <%= link_to post.user.username, user_posts_path(name: post.user.username) %>
        </div>
        <div class="text-right">
          <span class="glyphicon glyphicon-calendar"></span>
          <%= post.created_at.strftime('%b %d %Y') %> |
          <span class="glyphicon glyphicon-comment"></span>
          <%= post.comments.count %> Comments
        </div>
      </h5>
    </div>

    <div>
      <p class="text-justify"><%= post.blog_entry %></p>
      <p><%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %></p>
      </div>

      <% end %>
    </p>


    <nav aria-label="Page navigation">
      <ul class="pager">
    <li><%= link_to_prev_page @posts, 'Previous Page' %></li>
    <li><%= link_to_next_page @posts, 'Next Page' %></li>
  </ul>
    </nav>

  </div>
