<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group col-xs-6">
    <%= f.label :email, class:"input-group-addon" %>
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>
<br />
  <div class="input-group col-xs-6">
    <%= f.label :username, class:"input-group-addon" %>
    <%= f.text_field :username, class:"form-control" %>
  </div>
<br />
<div>
  <div class="input-group col-xs-6">
    <%= f.label :password, class:"input-group-addon" %>
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
</div>
<br />
  <div class="input-group col-xs-6">
    <%= f.label :password_confirmation, class:"input-group-addon" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>
<br />
  <div class="form-group">
    <strong>Upload a Profile Pic:</strong>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", {class: "btn btn-primary"}%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
